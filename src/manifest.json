{
    "manifest_version": 2,
    "name": "Crypto Converter - A cryptocurrency price converter",
    "short_name": "Crypto Converter",
    "description": "Crypto price converter",
    "version": "0.0.1",
    "icons": {
        "16": "assets/icon.png",
        "48": "assets/icon.png",
        "64": "assets/icon.png",
        "128": "assets/icon.png"
    },
    "browser_action": {
        "default_icon": "assets/icon.png",
        "default_title": "Crypto Converter",
        "default_popup": "popup.html"
    },
    "content_scripts": [
        {
            "matches": ["http://*/*", "https://*/*"],
            "js": ["content.bundle.js"],
            "css": ["content.bundle.css"],
            "run_at": "document_end"
        }
    ],
    "permissions": [
        "activeTab",
        "tabs",
        "storage",
        "webRequest",
        "webRequestBlocking",
        "<all_urls>"
    ]
}
